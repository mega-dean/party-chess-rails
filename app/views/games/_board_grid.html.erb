<div id='board-grid' class='board-grid'>
  <% game.boards_tall.times do |board_y| %>
    <div class='board-row'>
      <% game.boards_wide.times do |board_x| %>
        <%
        pieces_on_board = pieces[[board_x, board_y]]
        has_piece_on_board = pieces_on_board.any? do |piece|
          piece.player.id == current_player&.id
        end
        %>

        <div class="board" id="board_<%= board_x %>_<%= board_y %>">
          <% 8.times do |y| %>
            <% 8.times do |x| %>
              <% span_class = "#{y%2 == x%2 ? 'light' : 'dark'}-#{has_piece_on_board ? 'revealed' : 'obscured'}" %>
              <span class="square <%= span_class %>"></span>
            <% end %>
          <% end %>
          <% if has_piece_on_board %>
            <% pieces_on_board.each do |piece| %>
              <%= render partial: piece, locals: { current_player: current_player } %>
            <% end %>
          <% end %>
        </div>
      <% end %>
      <br />
    </div>
  <% end %>
</div>
